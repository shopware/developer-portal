    "@storybook/addon-links": "^7.0.10",
    "@storybook/blocks": "^7.0.10",
    "@storybook/builder-vite": "^7.0.10",
    "@storybook/testing-library": "^0.1.0",
    "@storybook/vue3": "^7.0.10",
