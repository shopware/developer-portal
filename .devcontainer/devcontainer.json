{
  "name": "Shopware Developer Portal",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "bash ./.devcontainer/post-install.sh",
  "customizations": {
    "codespaces": {
      "repositories": {
        "shopware/docs": {
          "permissions": {
            "contents": "write"
          }
        },
        "shopware/frontends": {
          "permissions": {
            "contents": "write"
          }
        },
        "shopware/meteor-icon-kit": {
          "permissions": {
            "contents": "write"
          }
        },
        "shopware/meteor-component-library": {
          "permissions": {
            "contents": "write"
          }
        },
        "shopware/admin-component-sdk": {
          "permissions": {
            "contents": "write"
          }
        }
      }
    }
  }
}